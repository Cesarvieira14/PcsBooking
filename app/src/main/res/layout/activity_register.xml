<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.authentication.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/backg2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register page"
        android:fontFamily="@font/poppins_extrabold"
        android:textSize="35sp"
        android:textColor="#F3F3F3"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="#DDFFFFFF"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp"
            android:background="@drawable/custom_edittext">
            <EditText
                android:id="@+id/LoginEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="9dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_email_24"
                android:drawablePadding="5dp"

                />
            <EditText
                android:id="@+id/UserFullnaame"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Full Name"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_account_circle_24"
                android:drawablePadding="5dp"

                />

            <EditText
                android:id="@+id/UserPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_phone_24"
                android:drawablePadding="5dp"

                />

            <EditText
                android:id="@+id/UserPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:singleLine="true"
                android:drawableLeft="@drawable/icons_password"
                android:drawablePadding="5dp"

                />

            <EditText
                android:id="@+id/UserConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/icons_password"
                android:drawablePadding="5dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/black"

                />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/ConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        />
</LinearLayout>